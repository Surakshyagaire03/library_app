<div class="container mt-4">
  <h2 class="mb-3">Books List</h2>

  <%= link_to "Add New Book", new_book_path, class: "btn btn-primary mb-3" %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Rating</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.rating %></td>
          <td>
            <%= link_to "View", book_path(book), class: "btn btn-sm btn-info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1>Library Books</h1>
<table border="1" cellpadding="5">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Rating</th>
    <th>Action</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.rating %></td>
      <td><%= link_to "View Details", book_path(book.id) %></td>
    </tr>
  <% end %>
</table>

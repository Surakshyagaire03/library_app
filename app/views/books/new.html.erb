<div class="container mt-4">
  <h2 class="mb-3">Add New Book</h2>

  <%= form_with model: @book, url: books_path do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :author, class: "form-label" %>
      <%= form.text_field :author, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :rating, class: "form-label" %>
      <%= form.number_field :rating, class: "form-control" %>
    </div>

    <%= form.submit "Create Book", class: "btn btn-success" %>
    <%= link_to "Back", books_path, class: "btn btn-secondary ms-2" %>
  <% end %>
</div>

